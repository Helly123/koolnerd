                {% if block.settings.trustpilot_pic != blank %}
                <div class="trustpilot_image"><img src="{{ block.settings.trustpilot_pic | img_url:'250x' }}"></div>
                  {% endif %}
                <div class="trustpilot_content">
                  {% if block.settings.trustpilot_name != blank %}
                 <div class="trustpilot_name"> {{ block.settings.trustpilot_name }}</div>
                    {% endif %}
                  {% if block.settings.trustpilot_date != blank %}
                  <div class="trustpilot_date">
                    {{ block.settings.trustpilot_date }}
                  </div>
                    {% endif %}
                  <div class="trustpilot_star">
